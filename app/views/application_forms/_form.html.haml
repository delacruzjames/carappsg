= form_for @application_form do |f|
  - if @application_form.errors.any?
    #error_explanation
      %h2= "#{pluralize(@application_form.errors.count, "error")} prohibited this application_form from being saved:"
      %ul
        - @application_form.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :message
    = f.text_field :message
  .actions
    = f.submit 'Save'
